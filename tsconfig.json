{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    // "types": ["node"],
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "lib",
    "example",
  ],
  "include": [
    "src/**/*",
  ]
}
